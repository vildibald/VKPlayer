<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:gravity="center"
        android:id="@+id/playerLayout"
        >
    <!-- Row 1 with single column -->

        <ImageView
                android:id="@+id/trackImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher"

                android:maxHeight="200dp"
                android:minHeight="20dp"
                android:minWidth="20dp"

                />


        <TextView
                android:id="@+id/playedTrackTextView"
                android:text="@string/welcome"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trackImageView"

                android:textColor="#000000"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

        <TableRow
                android:layout_below="@id/playedTrackTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttons_row"
                >
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/previousTrackButton"
                    android:layout_weight="1"
                    android:textColor="#000000"

                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/previous"

                    android:maxHeight="60dp"
                    android:minHeight="60dp"


                    />

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/playTrackButton"
                    android:layout_weight="1"
                    android:textColor="#000000"

                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/play"

                    android:maxHeight="60dp"
                    android:minHeight="60dp"


                    />

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pauseTrackButton"
                    android:layout_weight="1"
                    android:textColor="#000000"

                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pause"

                    android:maxHeight="60dp"
                    android:minHeight="60dp"


                    />

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stopTrackButton"
                    android:layout_weight="1"
                    android:textColor="#000000"

                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/stop"

                    android:maxHeight="60dp"
                    android:minHeight="60dp"

                    />

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nextTrackButton"
                    android:layout_weight="1"
                    android:textColor="#000000"

                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/next"

                    android:maxHeight="60dp"
                    android:minHeight="60dp"

                    />
        </TableRow>

    <SeekBar
            android:id="@+id/trackSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/buttons_row"
            android:layout_margin="20dp"/>



</RelativeLayout>
